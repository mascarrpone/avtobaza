<Page x:Class="avtobaza.Pages.Dispatcher"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:avtobaza.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dispatcher Dashboard">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <!-- информация о пользователе -->
            <TextBlock x:Name="userInfoTextBlock" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!-- отображения роли пользователя -->
            <StatusBar HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <StatusBarItem>
                    <TextBlock x:Name="roleTextBlock" Text="Диспетчер" Margin="5"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Page>
