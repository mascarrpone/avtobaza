<Page x:Class="avtobaza.Pages.NewPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:avtobaza.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewPassword">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="191" Width="185">
            <TextBlock Text="Введите новый пароль" FontSize="14" Margin="0,0,0,10"/>
            <PasswordBox x:Name="txtNewPassword"  Margin="0,0,0,10"/>
            <TextBlock Text="Повторите пароль" FontSize="14" Margin="0,0,0,10"/>
            <PasswordBox x:Name="txtRepeatPassword" Margin="0,0,0,10"/>
            <Button Content="Сохранить" Click="btnSaveNewPassword_Click" Height="32"/>
        </StackPanel>
    </Grid>
</Page>
