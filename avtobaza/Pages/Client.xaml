
<Page x:Class="avtobaza.Pages.Client"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:avtobaza.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Client">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/><!-- строка для заголовка -->
            <RowDefinition Height="*"/><!-- строка для основного содержимого -->
        </Grid.RowDefinitions>

        <!-- Верхняя часть страницы с фоном и кнопкой "Назад" -->
        <Grid Grid.Row="0" Background="#FF1456A1">
            <Image Width="45" Height="45" HorizontalAlignment="Left" Margin="5"/>
            <Button x:Name="btnBack" HorizontalAlignment="Right" Content="Назад"/>
            <Image HorizontalAlignment="Left" Height="40" Margin="20,0,0,0" VerticalAlignment="Center" Width="44" Source="/Resources/logo.jpg"/>
        </Grid>

        <Frame x:Name="FrmMain" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
